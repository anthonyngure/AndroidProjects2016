<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General styles for listview -->
    <style name="ToshListView" parent="AppTheme">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/listview_divider</item>
    </style>

    <style name="AboutHeadings" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:textAppearance">@android:color/secondary_text_light_nodisable</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AboutSubHeadings" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textAppearance">@android:color/secondary_text_light_nodisable</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="AboutInfors" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="DevelopersProfile" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="DevelopersInfors" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="TimetableData" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:color/secondary_text_light_nodisable</item>
    </style>

    <style name="DrawerActions" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@android:color/primary_text_dark_nodisable</item>
        <item name="android:textSize">@dimen/drawer_actions_text_size</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DrawerActionsHeadings" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@android:color/secondary_text_light_nodisable</item>
        <item name="android:textSize">@dimen/drawer_actions_text_size</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="DrawerActionsHorizontal" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@android:color/primary_text_dark_nodisable</item>
        <item name="android:textSize">@dimen/drawer_actions_text_size</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DrawerActionsHorizontalContainers" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>