<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- General styles for the actionbar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/actionbar</item>
    </style>

    <style name="Heading" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/heading_padding</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:background">@drawable/heading_bg</item>
    </style>

    <style name="LibraryActionButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainActionButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RentalsLabel" parent="AppTheme">
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- General styles for the list item overflow button -->
    <style name="OverFlow" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/my_overflow</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TableRowStyles" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/uncornered_box_background</item>
    </style>

    <style name="TableItem" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/uncornered_box_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TableItemNumber" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/uncornered_box_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TableItemChargeFor" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/uncornered_box_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TableItemAmount" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/uncornered_box_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- General styles for the linear horizontal wrappers -->
    <style name="HorizontalLinearWrapper" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- General styles for the no following, no going and reviews no -->
    <style name="NumberViews" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/listview_padding</item>
    </style>

    <!-- General styles for the details, going, following and reviews text views -->
    <style name="ClickableTextViews" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_material_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/buttons_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- General styles for the retry connection button -->
    <style name="RetryButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Retry</item>
        <item name="android:background">@drawable/cornered_box_background</item>
    </style>

    <!-- General styles for the no internet connection container -->
    <style name="NoInternetConnectionContainer" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- General styles for the list views -->
    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:divider">@color/background_floating_material_light</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- General styles for the EClassVideoData Time -->
    <style name="Time" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">10:00 AM to 06:00 PM</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- General styles for the EClassVideoData name -->
    <style name="Name" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">Live at The Elephant 20th Edition</item>
    </style>

    <!-- General styles for the EClassVideoData authorName -->
    <style name="Author" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">The Elephant</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- General styles for the description container -->
    <style name="Description" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Description</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:textColor">@color/primary_material_dark</item>
    </style>

    <!-- General styles for the description container -->
    <style name="FeeStructureHeadings" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@android:color/secondary_text_dark_nodisable</item>
        <item name="android:textColor">@color/primary_material_dark</item>
    </style>

</resources>
