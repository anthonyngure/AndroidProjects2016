<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_container_padding"
    android:orientation="vertical"
    tools:context="com.mustmobile.fragment.MainFragment">

    <ImageView
        android:id="@+id/fragment_main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:src="@drawable/logo"
        android:layout_marginBottom="@dimen/logo_margin_bottom"/>

    <TableLayout
        android:id="@+id/fragment_main_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:id="@+id/fragment_main_button_timetable"
                style="@style/MainActionButton"
                android:drawableTop="@drawable/ic_action_timetable"
                android:text="@string/button_timetable"/>
            <Button
                android:id="@+id/fragment_main_button_library"
                style="@style/MainActionButton"
                android:drawableTop="@drawable/ic_action_library"
                android:text="@string/button_library"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <Button
                android:id="@+id/fragment_main_button_semester_dates"
                style="@style/MainActionButton"
                android:drawableTop="@drawable/ic_action_cal"
                android:text="@string/button_semester_dates"/>
            <Button
                android:id="@+id/fragment_main_button_download"
                style="@style/MainActionButton"
                android:drawableTop="@drawable/ic_action_dow"
                android:text="@string/button_downloads"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/fragment_main_heading"
        style="@style/Heading"
        android:layout_marginBottom="@dimen/default_bottom_margin"
        android:text="@string/most_read_updates"/>

    <FrameLayout
        android:layout_below="@id/fragment_main_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/fragment_main_loading_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/nano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"/>
            <TextView
                android:layout_below="@id/nano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Loading..."/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_main_no_connection"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/red"
                android:textAppearance="@android:color/secondary_text_dark_nodisable"
                android:typeface="serif"
                android:textSize="16sp"
                android:text="@string/no_connection_message"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/fragment_main_retry_button"
                    android:text="@string/button_retry"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/fragment_main_report_button"
                    android:visibility="gone"
                    android:text="@string/button_report"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/fragment_main_listview"
        style="@style/ToshListView">
    </ListView>

</LinearLayout>
