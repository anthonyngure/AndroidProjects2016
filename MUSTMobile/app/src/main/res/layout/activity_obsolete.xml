<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mustmobile.ObsoleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_accomodation_log"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_height"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:contentDescription="@string/obsolete_app_version"
            android:layout_marginBottom="@dimen/logo_margin_bottom"/>

        <TextView
            android:text="@string/obsolete_app_version"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:background="@drawable/yellow_connered_box_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="@string/obsolete_app_version_message"/>
        <TextView
            android:id="@+id/activity_obsolete_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:textColor="@color/blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:textColor="@color/theme"
            android:typeface="sans"
            android:text="@string/label_installed"/>

        <TextView
            android:id="@+id/activity_obsolete_installed_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:textColor="@color/theme"
            android:typeface="sans"
            android:text="@string/label_new_update"/>

        <TextView
            android:id="@+id/activity_obsolete_latest_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"/>

        <TextView
            android:id="@+id/activity_obsolete_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"/>

        <Button
            android:id="@+id/activity_obsolete_buttonDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:textColor="@color/red"
            android:text="@string/button_download_latest_version"/>

    </LinearLayout>
</ScrollView>
