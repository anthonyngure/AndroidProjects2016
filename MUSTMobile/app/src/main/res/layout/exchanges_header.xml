<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/activity_exchanges_statistics"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_exchanges_views"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="@android:color/primary_text_dark_nodisable"
            android:textColor="@color/blue"/>
        <TextView
            android:id="@+id/activity_exchanges_answers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="@android:color/primary_text_dark_nodisable"
            android:textColor="@color/red"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_exchanges_question"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/activity_exchanges_statistics"
        android:layout_toRightOf="@id/activity_exchanges_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme"
        android:typeface="serif"
        android:textSize="14sp"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"
        android:text="Question here"/>

    <LinearLayout
        android:layout_below="@id/activity_exchanges_question"
        android:layout_toEndOf="@id/activity_exchanges_statistics"
        android:layout_toRightOf="@id/activity_exchanges_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_exchanges_tag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Tag"/>

        <TextView
            android:id="@+id/activity_exchanges_author"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="Author"/>
    </LinearLayout>
</RelativeLayout>