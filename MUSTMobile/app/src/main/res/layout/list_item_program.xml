<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_container_padding">

    <TextView
        android:id="@+id/list_item_program_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme"
        android:textSize="16sp"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"
        android:typeface="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="14sp"
        android:textColor="@color/light_orange"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"
        android:text="Requirements : "/>

    <TextView
        android:id="@+id/list_item_program_requirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"
        android:text="Some requirements"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textSize="14sp"
            android:textColor="@color/light_orange"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="Mode : "/>

        <TextView
            android:id="@+id/list_item_program_mode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="@android:color/secondary_text_dark_nodisable" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textSize="14sp"
            android:textColor="@color/light_orange"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="Duration : "/>

        <TextView
            android:id="@+id/list_item_program_duration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="@android:color/secondary_text_dark_nodisable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textSize="14sp"
            android:textColor="@color/light_orange"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="Fee : "/>

        <TextView
            android:id="@+id/list_item_program_fees"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textSize="14sp"
            android:textColor="@color/light_orange"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"
            android:text="Campus : "/>

        <TextView
            android:id="@+id/list_item_program_campus"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="@android:color/secondary_text_dark_nodisable"/>
    </LinearLayout>

</LinearLayout>