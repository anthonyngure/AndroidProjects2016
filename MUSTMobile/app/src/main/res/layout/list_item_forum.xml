<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.mustmobile.util.RoundImage
        android:id="@+id/list_item_forum_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/image_loader"/>

    <TextView
        android:id="@+id/list_item_forum_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_forum_image"
        android:layout_toEndOf="@id/list_item_forum_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:typeface="serif"
        android:textColor="@color/theme"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"/>
    <TextView
        android:id="@+id/list_item_forum_description"
        android:layout_below="@id/list_item_forum_name"
        android:layout_toRightOf="@id/list_item_forum_image"
        android:layout_toEndOf="@id/list_item_forum_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="@android:color/secondary_text_dark_nodisable"/>
</RelativeLayout>